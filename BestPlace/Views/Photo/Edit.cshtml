@model BestPlace.Models.bp_Photo

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>Edit Photo</title>
    <style>
        .DarkMetroButton
        {
            width: 100%;
            background-color: #0D8A82;
            display: block;
            color: White;
            font-weight: bold;
            text-align: center;
            padding-top: 10px;
            padding-bottom: 10px;
        }

        .DarkMetroButton:hover
        {
            color: White;
            text-decoration: none;
            background-color: #064A45;
        }
    </style>
</head>
<body>
        <table style="width:100%">
        <tr>
            <td style="width:200px; vertical-align:top">
                <div style="width:200px; max-height:150px; overflow:hidden">
                    <a href="/Place/Details?placeId=@Model.PlaceId">
                        <img src="../../Content/CoverImages/@Model.Path" width="200px" />
                    </a>
                </div>
            </td>

            <td style="vertical-align:top">
                @using (Html.BeginForm())
                {
                    @Html.TextAreaFor(m => m.Descript, new{style="width:100%; height:70px"});<br />
                    <div style="width:120px; float:right">
                        <input type="submit" class="DarkMetroButton" style="border-style:none" value="Save" />
                    </div>                                                                  
                }
            </td>
        </tr>
        </table>
</body>
</html>
